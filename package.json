{
  "name": "fin-text-style",
  "version": "1.0.1",
  "description": "Korean finance-friendly text formatting utilities with A11y & Design tokens.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "prepublishOnly": "npm run test && npm run build",
    "prepare": "husky",
    "release": "changeset publish"
  },
  "keywords": [
    "finance",
    "korean",
    "price",
    "format",
    "typescript",
    "a11y"
  ],
  "author": "hanjueun <hanjueun6267@naver.com>",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.0.0",
    "react": "^19.2.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "tsup": "^8.5.1",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "npm test -- --bail --findRelatedTests --passWithNoTests"
    ]
  }
}
